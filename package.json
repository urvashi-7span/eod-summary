{
  "name": "eod-summary-cli",
  "version": "1.0.0",
  "description": "AI-powered End of Day summary generator from Git commits. Supports both local AI (Ollama) and cloud AI (Google Gemini) for maximum flexibility and privacy.",
  "main": "src/index.js",
  "bin": {
    "eod-summary": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "npm run build:binaries",
    "build:binaries": "pkg package.json --out-path dist/",
    "dev": "nodemon src/index.js",
    "setup-dev": "npm install && npm run setup:hooks",
    "release": "npm run test && npm run lint && npm run build",
    "clean": "rm -rf node_modules dist coverage"
  },
  "keywords": [
    "git",
    "ai",
    "summary",
    "productivity",
    "cli",
    "eod",
    "end-of-day",
    "commit-analysis",
    "developer-tools",
    "ollama",
    "gemini",
    "local-ai",
    "privacy"
  ],
  "author": {
    "name": "Your Company",
    "email": "dev-team@yourcompany.com",
    "url": "https://yourcompany.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourcompany/eod-summary-cli.git"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "simple-git": "^3.20.0",
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6",
    "fs-extra": "^11.1.1",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "pkg": "^5.8.1",
    "@types/node": "^20.10.5"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
